<h1>My Tasks</h1>
<ul>


  <% @tasks.each do |task|%>
  <p>
    <%if task.completed?%>
      <p><i class="far fa-check-square"></i>
    <%else %>
      <p><i class="far fa-square"></i>
    <%end%>
     <%= link_to task.title, task_path(task)%>
   </p>

    <p><i class="far fa-trash-alt"></i>
    <%= link_to "delete", task_path(task),
    method: :delete,
      data: { confirm: "Are you sure?" }%></p>

  <%end%>
</ul>

<p> <%= link_to "+ Add new task", new_path %> </p>
